<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">
    <TextView
        android:text="Fecha de Nacimiento"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/TextLabel"
        android:id="@+id/LabelDocumento"
        android:textSize="@dimen/TextoLabelsmall"
        android:textStyle="bold"
        android:fontFamily="@string/fontFamilyProject" />
    <RelativeLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:minWidth="25dp"
        android:minHeight="25dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="@dimen/EditHeightNormal"
            android:background="@color/EditText"
            android:textSize="@dimen/TextoButonLoginSmall"
            android:textColor="@android:color/black"
            android:id="@+id/FechaInicial"
            android:textStyle="bold"
            android:fontFamily="@string/fontFamilyProject"
            android:layout_marginTop="12dp" />
        <Button
            android:id="@+id/btnCalendario"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:background="@drawable/calendarButton"
            android:layout_toRightOf="@id/FechaInicial" />
    </RelativeLayout>
</LinearLayout>